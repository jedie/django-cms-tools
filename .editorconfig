# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{bat,cmd,ps1}]
end_of_line = crlf

[{Makefile,**.mk}]
indent_style = tab

[LICENSE]
insert_final_newline = false

[*.py]
# Configuring isort
# https://github.com/timothycrosley/isort/wiki/isort-Settings
atomic = true
line_length = 120
# 5 - Hanging Grid Grouped
multi_line_output = 5

known_external=pytest
known_django=django
known_cms=cms

known_djangotools=django_tools

import_heading_firstparty=Django CMS Tools
known_first_party=django_cms_tools

default_section=THIRDPARTY
sections=FUTURE,STDLIB,EXTERNAL,DJANGO,CMS,THIRDPARTY,DJANGOTOOLS,FIRSTPARTY,LOCALFOLDER
